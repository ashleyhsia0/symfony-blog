{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>{{ user.username }}'s Blog</h1>

        {% for post in posts %}
            <h2>{{ post.title }}</h2>
            <div class="post-content">
                {{ post.body }}
            </div>
        {% endfor %}
    </div>

{% endblock %}
